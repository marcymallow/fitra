$main-font: 'Helvetica Neue', Arial, Helvetica, sans-serif;
$white: #fff;
$black:#000;
$color-text:#555;
$color-accent: #FF3700;
$color-label:#707070;
$line-global:20px;
$gutter-global: $line-global * 2;
$body-font-size:15px;
$label-font-size:12px;
$color-border: #dedede;
$standard-border: 1px solid $color-border;
$black-border: 1px solid $black;


    @mixin reset-input {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        -ms-appearance: none;
        cursor: pointer;
        background: transparent;
        border: none;
        border-radius: 0;
        width: auto;
        margin: 0;
        padding: 0;
        line-height: normal;
        -webkit-font-smoothing: inherit;
        -moz-osx-font-smoothing: inherit;
        text-align: left;
      }


//Base

*{
    font-family: $main-font;
    box-sizing: border-box;
}

html,
body{
    width: 100%;
    margin:0;
    padding:0;
    color:$black;
    line-height: $line-global;
}
body{
    background-color: $white;
    font-size: $body-font-size;
}

h1,h2,h3,h4,h5,h6,p,ul,ol{
    margin: 0;
    padding: 0;
    font-weight: 400;
}

//Style guide
h2{
    font-size: $body-font-size*2;
    line-height: $line-global*2;
}

h3{
    font-size: $body-font-size;
    line-height: $line-global;
}

.list-with-stroke{
    list-style-type: none;
}

.list-with-stroke li{
    padding:$line-global 0;
    border-top:$standard-border ;
}

.list-with-stroke li:last-child{
    border-bottom:$standard-border ;
}

.headline-big{
    font-size: 22vw;
    line-height: 1;
}

label{
    font-size:$label-font-size ;
    color:$color-label;
}

p,ul,ol{
    font-size: $body-font-size;
    line-height: $line-global;
    color:$color-text
}

.styled-select{
    position:relative;
}

.styled-select select{
@include reset-input;
width: 100%;
font-size: $body-font-size;
line-height: $line-global;
padding: $line-global;
border: $black-border;
}

.styled-select.select-arrow{
    position: absolute;
    top:0;
   right: 0;
}

button{
    @include reset-input();
    width:100%;  
    font-size: $body-font-size;
    line-height: $line-global;
    padding: $line-global;
    background-color: $color-accent;
    color:$white;
}

//Utility classes
.grid{
    display: grid;
    grid-column-gap: $gutter-global;
    grid-row-gap: $gutter-global;
}

.two-columns{
    grid-template-columns: 1fr 1fr;
}

.main-content{
    min-height: 100vh;
    padding: $gutter-global;
    width:50%;
    margin-left: auto;
}

.sticky-side-image{
    position:fixed;
    left:0;
    top:$gutter-global;
    bottom:$gutter-global;
    width:50%;
}

.sticky-side-image img{
    width:100%;
    height: 100%;
    object-fit: cover;
}

.valign-center{
    display: flex;
    flex-direction: column;
    justify-content: center;
}





//Index styles
 #page-index {
   
}

#product-info{
    grid-template-rows: minmax(max-content,auto) minmax(min-content, max-content);
}

.headline{
    padding-bottom: $line-global*3;
}

.single-product-image{
    width: 100%;
    height: 100%;
}

.description-content{
    margin-top: $line-global;
}

.form-wrapper{
    padding-top: $line-global*3;
}

#add-to-cart-button .product-price{
float:right;
font-size: $label-font-size;
}

#add-to-cart-form{
  margin-top: -($line-global);
 
}

