{% assign mainProduct = all_products['fitra-activity-band'] %}

<div class="grid two-columns" id="page-index">
  <div class="product-images">{% for image in mainProduct.images %}
    <div class="single-product-image"><img src="{{image | img_url:'large' }}" ></div>
    {% endfor %}</div>
  
  <div class="product-info main-content grid">
    <div class="valign-center">
      <h1>{{ mainProduct.title }}</h1>
    </div>
    
    
    <div class="grid two-columns">
      <div class="headline valign-bottom">  <h2>{{ 'product.copy.headline' | t }}</h2></div>
  
      <h3>{{ 'product.copy.description-headline' | t }}</h3>
    
      <div class="description">
        {{ mainProduct.description }}
      </div>
    
    <div class="details">
    <ul>
      <li>{{ 'product.details_list.item1' | t }}</li>
      <li>{{ 'product.details_list.item2' | t }}</li>
    </ul>
    </div>
    
    <div class="form-wrapper"><form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
     <label for="productSelect">{{mainProduct.options.first}}</label>
      <select name="id" id="productSelect">
        {% for variant in mainProduct.variants %}
    <option value="{{variant.id}}">{{variant.title}}</option>
    {% endfor %}
     </select>
      <button type="submit" name="add" id="AddToCart">
       {{ 'product.form.submit' | t }}
      <span class="product-price">{{ mainProduct.price | | money_without_trailing_zeros}}</span>
      </button>
    </form>
    </div>
    </div>
  
  
</div>







